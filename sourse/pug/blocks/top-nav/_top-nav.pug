
mixin mob-mnu()
	+b.toggle-menu-mobile--js.d-lg-none
		span
	+b.menu-mobile--js.d-lg-none
		+b.toggle-menu-mobile--js
			span
		+e.inner
		
			+mnu()
			.text-right
	//  мобильное меню
mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container
			.row
				.col
					+mnu()
				.col-auto
					+e.link(href="tel:88007750077") 8 800 77 500 77
						+icon('tel')
				.col-auto
					+e.basket(href="#")
						+icon('basket')
	// end top-nav