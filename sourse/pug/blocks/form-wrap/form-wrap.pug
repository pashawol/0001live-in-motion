mixin form-head()
	form.js-form-validate( data-parsley-validate="") 
		input(type='hidden', class="order", name='order', value=`Заявка  с сайта` ) 
		block

mixin input(placeholder,  t='text', label=placeholder, name= t)
	mixin t(t='text',placeholder, name= t)
		if t== "textarea"
			+e.TEXTAREA.input.form-control( name= name)&attributes(attributes)
		else
			+e.INPUT.input(type= t  name= name)&attributes(attributes)
	+e.input-wrap
		if label
			label
				+t(t,placeholder, name)&attributes(attributes)
				+e.SPAN.title
					span= label 
					+e.SPAN.valid-text valid text
				block
		else
			+t(t,placeholder, name)&attributes(attributes)
			block
	// +e.input-wrap
mixin select(pl,...items)
	+e.input-wrap  
		+e.SELECT.input

				option()= pl
				each item in items
					option()= item


//- wrapper for form
mixin form-wrap()
	+b.form-wrap&attributes(attributes)
		form
			block
//- /wrapper for form


mixin in-c(typ="checkbox", text, name= typ )
	+b.LABEL.custom-input
		+e.INPUT.input(type= typ , name= name)&attributes(attributes)
		+e.SPAN.lab
		if block
			block 
		else
			+e.SPAN.text= text
 
mixin add-file(n)
	+b.add-file
		label
			+e.INPUT.input(name='file', type='file')
			+e.SPAN.btn 
			+e.SPAN.text   Прикрепить резюме
		+e.SPAN.filename 


mixin polite()
	+e.polite
		+in-c()(checked)
