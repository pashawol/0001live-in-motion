mixin s-form(notmain)
	// start s-form
	+b.s-form.section.block-with-lazy#s-form(class="wow fadeInUp" data-wow-duration=`${dur * 2}s` )&attributes(attributes)
		.container
			.row
				+e.col.col.order-md-last
					+piclazy('bg','form-img1')
				.col-lg-4.col-md-5
					+b.section-title 
						h2 Обратная связь
						p У&nbsp;вас остались вопросы, пожелания или предложения? Будем рады вам помочь
					+form-wrap()
						+input('Ваше имя*')
						+input('Ваш телефон','tel')(required)
						+input('Ваш e-mail*','email')
						//- if !notmain
						//- 	+input('Ваша идея','textarea')
						+e.btn(type="submit") Отправить
	// end s-form